{
  "name": "coffee-shop-buddy-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm-run-all -p build:*",
    "build:web": "npm run build --workspace=coffee-shop-buddy",
    "build:api": "npm run build --workspace=api",
    "dev": "npm-run-all -p dev:*",
    "dev:web": "npm run dev --workspace=coffee-shop-buddy",
    "dev:api": "npm run dev --workspace=api",
    "start": "npm run start --workspace=api",
    "test": "npm run test --workspace=api"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}