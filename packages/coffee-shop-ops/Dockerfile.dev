# Coffee Shop Ops Development Dockerfile
FROM node:20-alpine

WORKDIR /app

# Copy root package.json and workspace files
COPY package.json ./
COPY packages/coffee-shop-ops/package.json ./packages/coffee-shop-ops/

# Install dependencies
RUN npm install

# Copy source code
COPY packages/coffee-shop-ops ./packages/coffee-shop-ops

# Set working directory to the Coffee Shop Ops package
WORKDIR /app/packages/coffee-shop-ops

# Create uploads directory
RUN mkdir -p public/uploads

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]
