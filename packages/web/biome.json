{
  "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "formatWithErrors": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "error"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noConsole": "warn"
      },
      "performance": {
        "noDelete": "error"
      },
      "style": {
        "noNegationElse": "error",
        "useShorthandFunctionType": "error",
        "useImportType": "error"
      },
      "a11y": {
        "useKeyWithClickEvents": "error",
        "useMediaCaption": "error"
      },
      "complexity": {
        "noForEach": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "files": {
    "maxSize": 2000000,
    "ignoreUnknown": true,
    "includes": [
      "src/**/*.{ts,tsx,js,jsx,json}"
    ]
  }
}